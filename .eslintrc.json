{
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-useless-escape": "off",
    "no-underscore-dangle": "off",
    "no-multiple-empty-lines": [
      2,
      {
        "max": 2
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "import/prefer-default-export": "off",
    "no-restricted-exports": 0,
    "class-methods-use-this": 0
  }
}

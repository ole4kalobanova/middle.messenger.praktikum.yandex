---
title: 'Login'
---

{{!< base}}
<main>
  <div class='login-form__container'>
    <div class="login-form__title">Вход</div>
    <div class="login-form__fields">
      {{> input/input type='text' label="Логин" name="login"}}
      {{> input/input type='password' label="Пароль" name="password"}}
    </div>
    <div class="login-form__actions">
      {{> button/button text="Войти" link="./home.hbs" id="button__primary"}}
      {{> button/button text="Еще не зарегистрированы?" link="./registration.hbs" id="button__secondary"}}
    </div>
  </div>
</main>

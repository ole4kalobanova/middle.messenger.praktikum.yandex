---
title: 'Registration'
---

{{!< base}}
<main>
  <div class='login-form__container'>
    <div class="login-form__title">Регистрация</div>
    <div class="login-form__fields">
      {{> input/input type='text' label="Почта" name="email"}}
      {{> input/input type='text' label="Логин" name="login"}}
      {{> input/input type='text' label="Имя" name="first_name"}}
      {{> input/input type='text' label="Фамилия" name="second_name"}}
      {{> input/input type='text' label="Телефон" name="phone"}}
      {{> input/input type='password' label="Пароль" name="password"}}
      {{> input/input type='password' label="Пароль еще раз" name="repeatPassword"}}
    </div>
    <div class="login-form__actions">
      {{> button/button text='Создать аккаунт' link="./chats.hbs" id="button__primary"}}
      {{> button/button text='Войти' link="./index.hbs" id="button__secondary"}}
    </div>
  </div>
</main>
